<Window x:Class="DateiSortierer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateiSortierer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Sortieren" HorizontalAlignment="Left" Margin="330,322,0,0" VerticalAlignment="Top" Width="75" Click="Sort_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="388,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="Source"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="388,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="Target"/>
        <Label Content="Pfad:" HorizontalAlignment="Left" Margin="240,150,0,0" VerticalAlignment="Top"/>
        <Label Content="Ziel:" HorizontalAlignment="Left" Margin="240,209,0,0" VerticalAlignment="Top"/>
        <ComboBox SelectedValuePath="Name" HorizontalAlignment="Left" Margin="125,322,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Name="ddSort">
            <ComboBoxItem IsSelected="true" Name="Sort1">Sortieren 1</ComboBoxItem>
            <ComboBoxItem Name="Sort2">Sortieren 2</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
